<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvTienda"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="@color/blanco"
    app:cardCornerRadius="20dp" >

    <TextView
        android:id="@+id/tvIdTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDireccionTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvLatitudTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvLongitudTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvValoracionTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/ivTienda"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:transitionName="ivImagenTienda"/>
    
    <com.github.florent37.shapeofview.shapes.DiagonalView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:diagonal_angle="15"
        app:diagonal_direction="left"
        app:diagonal_position="left"
        android:layout_marginStart="50dp" >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/degradado_tiendas"
            android:alpha="0.9" />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|end" >
        
            <TextView
                android:id="@+id/tvNombreTienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:singleLine="true"
                android:shadowColor="@color/negro"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:layout_marginEnd="5dp"
                android:transitionName="tvNombreTienda" />
        
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/flecha_derecha"
                android:tint="@color/blanco"
                android:padding="3dp" />
    
        </LinearLayout>
    
    </com.github.florent37.shapeofview.shapes.DiagonalView>
        
    <ImageView
        android:id="@+id/ivLogoTienda"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerInside"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

</androidx.cardview.widget.CardView>