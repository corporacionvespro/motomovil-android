<?xml version="1.0" encoding="utf-8"?>
<!--By: El Bryant-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondo_bottomsheet" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elige tu dirección de entrega"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/indigo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />
    
    <LinearLayout
        android:id="@+id/llayUbicacionActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_ubi"
            android:background="@drawable/redondo_indigo"
            android:tint="@color/blanco" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubicación actual"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1" />
        
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_derecha"
            android:tint="@color/verde" />
        
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvIngresarDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="70dp"
        android:transitionName="cvDireccionDestino"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/blanco" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp" >
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar dirección de entrega"
                android:fontFamily="@font/comfortaa_bold"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:transitionName="cvDireccionDestino" />
            
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>