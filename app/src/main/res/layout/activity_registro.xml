<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="@color/fondo"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp" >

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/isotipo" />

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_datos_perfil"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="DNI"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etDni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="number"
                            android:maxLength="8"
                            android:imeOptions="actionNext"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_perfil"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Nombres"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etNombres"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_perfil"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Apellidos"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_celular"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Celular"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etCelular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="phone"
                            android:maxLength="9"
                            android:imeOptions="actionNext"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_arroba"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Correo electrónico"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginBottom="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="15dp" >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_candado"
                                android:tint="@color/indigo"
                                android:padding="5dp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Contraseña"
                                android:textSize="15sp"
                                android:textColor="@color/indigo"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etClave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/gris"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:padding="0dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Registrarme"
                    android:textAllCaps="false"
                    android:background="@drawable/boton_indigo"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/blanco"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/flayCargando"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99E1EFE8"
        android:visibility="gone" >
        
        <com.singh.daman.proprogressviews.DotsZoomProgress
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:inner_color="@color/indigo"
            app:mid_color="@color/indigo"
            app:outer_color="@color/indigo"
            app:min_radius="10dp"
            app:inner_radius="20dp"
            app:mid_radius="26dp"
            app:outer_radius="30dp"
            app:zoom_speed="15" />
    
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>